C COMMENT
10 WRITE(101,900)
900 FORMAT(' RADIUS')
 READ(100,901)RADIUS
901 FORMAT() ;UNFORMATTED READ
 DIAM=2*RADIUS
 CIRCUM=3.14159*DIAM
 AREA=2*3.14159*RADIUS**2
 WRITE(101,902)RADIUS,DIAM,CIRCUM,AREA
902 FORMAT(' A CIRCLE WITH RADIUS OF ',F3.2,' HAS A DIAMETER ',
& 'OF ',F3.2,', A CIRCUMFERENCE'/' OF',F3.2,', AND AN AREA OF ',
& F3.2//)
 GOTO 10
 END
